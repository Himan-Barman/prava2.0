{
  "name": "prava-backend",
  "version": "2.0.0",
  "description": "The Rolls Royce of Social Media - Security, Privacy & Performance First",
  "private": true,
  "type": "module",
  "_comment": "Rolls Royce Architecture: Fastify (Speed), BullMQ (Queues), Sharp (Image Opt), Sodium (Encryption)",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/api/http/server.ts",
    "start": "node dist/api/http/server.js",
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@fastify/compress": "^7.0.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "argon2": "^0.40.1",
    "bullmq": "^5.4.1",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "libsodium-wrappers": "^0.7.13",
    "mongoose": "^8.2.1",
    "nanoid": "^5.0.6",
    "pino": "^8.19.0",
    "resend": "^3.2.0",
    "sanitize-html": "^2.13.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^20.11.25",
    "@types/sanitize-html": "^2.11.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "eslint": "^8.57.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
